@model RestaurantGuide.Web.Models.RestaurantListViewModel

<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">@Model.Name</h4>
    </div>
    <div class="panel-body">
        <div>Rating: @Model.Rating</div>
        <div>@Html.ActionLink("Reviews", "Index", "Reviews", new { id = Model.Id }, null): @Model.CountOfReviews</div>
    </div>
</section>

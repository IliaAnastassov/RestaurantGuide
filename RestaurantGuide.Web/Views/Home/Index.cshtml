@model IEnumerable<RestaurantGuide.Web.Models.RestaurantListViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h2>Restaurants</h2>

@foreach (var restaurant in Model)
{
    <h4>@restaurant.Name</h4>
    <div>
        <div>Location: @restaurant.City, @restaurant.Country</div>
        <div>Rating: @restaurant.Rating</div>
        <div>Reviews: @restaurant.CountOfReviews</div>
    </div>
    <div>
        <span>@Html.ActionLink("Edit", "Edit", new { id = restaurant.Id })</span>
    </div>
    <hr />
}
